/**index.wxss**/
page {
  height: 100%;
}

.container {
  height: 100%;
  overflow-y: hidden;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
} 

.weather-top {
  height: 700rpx;
  width: 100%;
  position: relative;
  display: flex;
  flex-flow: column;
  align-items: center;
}

.weather-bg {
  height: 100%;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}

.weather-navigation {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
  color: #FFF;
  position: fixed;
}

.weather-info {
  width: 100%;
  flex: 1 1 auto;
  display: flex;
  flex-flow: column;
  align-items: center;
  justify-content: center;
  color: #FFF;
  padding-bottom: 88rpx;
}

.info-wendu {
  font-size: 124rpx;
  margin-bottom: 36rpx;
}

.info-wendu::after {
  content: "Â°";
}

.weather-city {
  position: absolute;
  width: 96rpx;
  height: 96rpx;
  border-radius: 100%;
  left: 24rpx;
  top: 0rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.weather-location-icon {
  width: 48rpx;
  height: 48rpx;
}

.weather-list {
  height: 200rpx;
  flex: 1 1 auto;
}